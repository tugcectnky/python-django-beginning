
print("*"*50)
print("Press 1 from Celcius to Fahrenheit")
print("Press 2 from Fahrenheit to Celcius")
print("Temperature Converter")
print("*"*50)

choice=input ("Your choice (1/2): ")
if choice=='1':
    print("\n Celcius to Fahrenheit")
    celcius=float(input("Degree to convert: "))
    fahrenheit=(celcius*1.8)+32
    print("{} degree Celcius equal to {} degree Fahrenheit".format(celcius, fahrenheit))

elif choice=="2":
    print("\n Fahrenheit to Celcius")
    fahrenheit=float(input("Degree to convert: "))
    celcius=(fahrenheit-32)/1.8
    print("{} degree Fahrenheit is equal to {} degree Celcius".format(fahrenheit,celcius))
    print("%d Fahrenheit is %d Celcius" ,(fahrenheit,celcius))

else:
    print("OMG! You are a hacker.")